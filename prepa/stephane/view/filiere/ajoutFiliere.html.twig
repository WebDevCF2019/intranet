{# on étend le template depuis base.html.twig, qui est donc son parent #}
{% extends "filiere/template1.html.twig" %}

{# on veut surcharger le title, on utilise le bloc, on récupère le contenu du parent {{ parent() }} et on rajoute notre texte #}
{% block title %}{{ parent() }} | Admin | Ajouter une section{% endblock %}

{% block menuhaut %}
{% include "filiere/hautEtMenu.html.twig" %}
{% endblock %}

{% block milieu %}
    <!-- Page Content -->
<main role="main" class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1 class="mt-5">Administration du CF2m</h1>
                <p class="lead">Admin | Ajouter une filiere</p>
            </div>
            <div class="col-lg-6 text-left">
                {# Affichage du formulaire #}
                <form action="" method="post" name="createFiliere">
                    <input name="lenom" type="text" placeholder="Titre de la filiere" required><br>
                    <textarea name="lacronyme" placeholder="Acronyme de la filiere" required></textarea><br>
                    <input type="submit" value="Envoyer">
                </form>
                <h3>{{ error }}</h3>
            </div>
        </div>
</main>

{% endblock %}

{% block bas %}
{% include "filiere/footer.html.twig" %}
{% endblock %}